<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alex.fitbytes">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".MealPlan"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".FitnessTracker"
            android:label="Goal Tracker"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Pantry"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Recipes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UpcomingPlans"
            android:screenOrientation="portrait" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".UserStatsActivity" />
        <activity android:name=".CalendarPicker"/>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".BarcodeScanner"></activity>
    </application>

</manifest>