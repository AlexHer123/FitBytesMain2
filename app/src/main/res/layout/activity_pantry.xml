<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pantry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.fitbytes.Pantry">

    <TextView
        android:text="Pantry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_pantry_title"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <SearchView
        android:id="@+id/pantrySearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_below="@+id/textView_pantry_title"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView_pantry_None"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="No ingredients."
        android:textSize="26sp"
        android:layout_below="@+id/pantrySearch"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <ListView
        android:id="@+id/pantryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pantrySearch"
        android:layout_marginBottom="46dp"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/holo_blue_light"/>

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_pantry_add"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
