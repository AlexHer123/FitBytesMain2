<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <TextView
        android:id="@+id/ingredientListItemNameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TestName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/ingredientAmountListItemID"
        android:text="TestAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/ingredientListItemNameID"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:id="@+id/ingredientMeasurementListItemID"
        android:text="TestMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/ingredientAmountListItemID"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        />
</RelativeLayout>
