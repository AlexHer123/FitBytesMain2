<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginRight="18dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="18dp">

    <TextView
        android:text="Ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView_pPop_title"
        android:textSize="36sp"
        android:textAlignment="viewStart" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_pPop_title"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Quantity:"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/textView_pPop_quantity"
            android:textSize="26sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_pPop_quantity"
            android:text="0"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView_pPop_quantity"
            android:textSize="20sp"
            android:layout_weight="1" />

        <TextView
            android:text="Measure"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/textView_pPop_measure"
            android:layout_weight="1"
            android:textSize="26sp" />

    </LinearLayout>

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/button_pPop_add"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp" />
</RelativeLayout>
