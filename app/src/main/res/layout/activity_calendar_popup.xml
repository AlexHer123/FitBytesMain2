<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:minWidth="50pt"
    android:minHeight="50pt"
    android:layout_width="350dp">


    <TextView
        android:text="Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_calpop_date"
        android:layout_weight="0.17"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView_calpop_meals"
        android:text="Planned Meals:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.43"
        android:textSize="26sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_calpop_mealList"
        android:layout_weight="4.36"
        android:textSize="24sp" />

    <Button
        android:text="Select Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendarSelect_button"
        android:layout_weight="0.17" />

</LinearLayout>
