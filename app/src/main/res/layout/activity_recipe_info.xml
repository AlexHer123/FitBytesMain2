<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="50pt"
    android:minHeight="50pt"
    android:weightSum="1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.03"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mp_recipe_name"
            android:text="Recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_weight="0.03" />

        <TextView
            android:text="Calorie: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_calorie_text"
            android:layout_weight="0.03"
            android:textSize="18sp"
            android:layout_below="@+id/mp_recipe_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_ingredient_text"
            android:textSize="18sp"
            android:layout_weight="0.03"
            android:layout_below="@+id/recipe_calorie_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

    </LinearLayout>

</ScrollView>